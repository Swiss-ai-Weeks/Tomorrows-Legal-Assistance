# Environment configuration for Tomorrow's Legal Assistance API
# Copy this file to .env and modify values as needed

# API Settings
API_TITLE="Tomorrow's Legal Assistance API"
API_DESCRIPTION="A FastAPI backend for legal assistance services"
API_VERSION="0.1.0"

# Server Settings
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# CORS Settings (comma-separated list for multiple origins)
ALLOWED_ORIGINS="*"
ALLOWED_METHODS="*"
ALLOWED_HEADERS="*"
ALLOW_CREDENTIALS=true

# Credentials and Tokens
APERTUS_API_KEY="your_apertus_api_key_here"
GOOGLE_API_KEY="your_google_api_key_here"